#VARIABLES TO BE USED

########## MYSQL ##########
##IMAGE
DB_IMAGE=mysql
DB_IMAGE_TAG=5.7

##NETWORK
#better if both ports are the same
DB_PORT_INTERNAL=3306
DB_PORT_EXPOSED=3306

##DATABASE
DB_DATABASE_NAME=db_mysql

##SCRIPTS
DB_SCRIPT_START_ROUTE=/home/sql/start
DB_SCRIPT_START_ROUTE_LOCAL=../sql/start

##USER MANAGEMENT
DB_USER_NAME=user
DB_USER_PASSWORD_ROUTE_LOCAL=../sql/secrets/DB_USER_PASSWORD
DB_ROOT_PASSWORD_ROUTE_LOCAL=../sql/secrets/DB_ROOT_PASSWORD
DB_USER_PASSWORD_ROUTE=/run/secrets/DB_USER_PASSWORD
DB_ROOT_PASSWORD_ROUTE=/run/secrets/DB_ROOT_PASSWORD

##CONTAINER
DB_DOCKER_RESTART_POLICY=unless-stopped
DB_DOCKER_NAME=mysql

##VOLUMES
DB_VOLUME_NAME=vol_MYSQL
DB_VOLUME_MOUNTPOINT=/var/lib/mysql
