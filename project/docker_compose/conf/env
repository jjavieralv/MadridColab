
########## MYSQL ##########
##IMAGE
DB_IMAGE=mysql
DB_IMAGE_TAG=8.0.28

##NETWORK
#better if both ports are the same
DB_PORT_INTERNAL=3306
DB_PORT_EXPOSED=3306

##DATABASE
#if uncomment following line(same in compose.yml file), this database will be created automatically
#when container starts
#DB_DATABASE_NAME=db_mysql

##USER MANAGEMENT
DB_USER_NAME=user
DB_USER_PASSWORD_ROUTE_LOCAL=../sql/secrets/DB_USER_PASSWORD
DB_ROOT_PASSWORD_ROUTE_LOCAL=../sql/secrets/DB_ROOT_PASSWORD
DB_USER_PASSWORD_ROUTE=/run/secrets/DB_USER_PASSWORD
DB_ROOT_PASSWORD_ROUTE=/run/secrets/DB_ROOT_PASSWORD

##CONTAINER
DB_DOCKER_RESTART_POLICY=unless-stopped
DB_DOCKER_NAME=mysql

##VOLUMES
DB_VOLUME_NAME=vol_MYSQL
DB_VOLUME_MOUNTPOINT=/var/lib/mysql




########## COLAB ##########
##IMAGE
COLAB_IMAGE=colab
COLAB_IMAGE_TAG=0.1

##NETWORK
COLAB_PORT_INTERNAL=18082
COLAB_PORT_EXPOSED=80

##SQL
COLAB_DATABASE_NAME=xcolab

##SCRIPTS
DB_SCRIPT_START_ROUTE=/sql/starter
COLAB_DEFAULT_CONF_ROUTE=/conf/sample-application.properties

##CONTAINER
COLAB_DOCKER_RESTART_POLICY=unless-stopped
COLAB_DOCKER_NAME=colab

##VOLUMES
COLAB_PROYECT_LOCAL=../../madridColab
COLAB_PROYECT_MOUNTPOINT=/home/madridColab
